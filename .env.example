# Personal AI Assistant - Environment Variables
# Copy this file to .env and fill in your actual values

# API Authentication
# Generate a UUID for your API key: https://www.uuidgenerator.net/
API_KEY=your-api-key-uuid-here

# Claude API (Anthropic)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database
# For MVP: SQLite file path
DATABASE_URL=sqlite:///./app.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging
# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Volume Paths (Use absolute paths for production)
POSTGRES_DATA_PATH=./postgres_data
LOG_DATA_PATH=./logs

